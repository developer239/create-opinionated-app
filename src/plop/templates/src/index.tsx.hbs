import React from 'react'
import ReactDOM from 'react-dom'
import { BrowserRouter as Router } from 'react-router-dom'
import { App } from 'App'

const renderApp = () => {
  ReactDOM.render(
    <Router>
      <App />
    </Router>,
    document.getElementById('root')
  )
}

// @ts-ignore
if (module.hot) {
  // @ts-ignore
  module.hot.accept('./App', renderApp)
}

renderApp()
