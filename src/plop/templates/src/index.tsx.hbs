import React from 'react'
import ReactDOM from 'react-dom'
{{#if isRouter}}
import { BrowserRouter as Router } from 'react-router-dom'
{{/if}}
import { App } from 'App'

const renderApp = () => {
  ReactDOM.render(
    {{#if isRouter}}
    <Router>
    {{/if}}
      <App />
    {{#if isRouter}}
    </Router>
    {{/if}},
    document.getElementById('root')
  )
}

if (module.hot) {
  module.hot.accept('./App', renderApp)
}

renderApp()
