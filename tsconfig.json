{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "esnext",
    "target": "es5",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
